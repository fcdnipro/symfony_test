{% extends 'base.html.twig' %}

{% block title %}Employees{% endblock %}

{% block body %}
    <h1>Employees <a class="btn btn-primary" href="{{ path('employees_index') }}">Back to list</a></h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ employee.id }}</td>
            </tr>
            <tr>
                <th>First_name</th>
                <td>{{ employee.firstName }}</td>
            </tr>
            <tr>
                <th>Last_name</th>
                <td>{{ employee.lastName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ employee.email }}</td>
            </tr>
        </tbody>
    </table>



    <a class="btn btn-primary edit" href="{{ path('employees_edit', {'id': employee.id}) }}">Edit</a>

    {{ include('employees/_delete_form.html.twig') }}
{% endblock %}
