{% extends 'base.html.twig' %}

{% block title %}Company{% endblock %}

{% block body %}
    <h1>Company <a class="btn btn-primary" href="{{ path('company_index') }}">back to list</a></h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ company.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ company.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ company.email }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td><img alt="{{ asset('uploads/images/' ~ company.path) }}" src="{{ asset('uploads/images/' ~ company.path) }}"></td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ company.website }}</td>
            </tr>
        </tbody>
    </table>



    <a class="btn btn-primary edit" href="{{ path('company_edit', {'id': company.id}) }}">Edit</a>

    {{ include('company/_delete_form.html.twig') }}
{% endblock %}
