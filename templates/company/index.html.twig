{% extends 'base.html.twig' %}

{% block title %}Company index{% endblock %}

{% block body %}
    <h1>Company index <a class="btn btn-primary create" href="{{ path('company_new') }}">Create new</a> </h1>

    <table class="table table-striped table-bordered table-sm">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Logo</th>
                <th>Website</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <td>{{ company.id }}</td>
                <td>{{ company.name }}</td>
                <td>{{ company.email }}</td>
                <td><img alt="{{ asset('uploads/images/' ~ company.path) }}" src="{{ asset('uploads/images/' ~ company.path) }}"></td>
                <td>{{ company.website }}</td>
                <td>
                    <a class="btn btn-primary t-show" href="{{ path('company_show', {'id': company.id}) }}">show</>
                    <a class="btn btn-primary t-edit" href="{{ path('company_edit', {'id': company.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(companies) }}

{% endblock %}
